<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <AssemblyName>ckAccess</AssemblyName>
    <Product>ckAccess</Product>
    <Version>1.0.0</Version>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <LangVersion>latest</LangVersion>
    <RestoreAdditionalProjectSources>
      https://api.nuget.org/v3/index.json;
      https://nuget.bepinex.dev/v3/index.json;
      https://nuget.samboy.dev/v3/index.json
    </RestoreAdditionalProjectSources>
    <RootNamespace>ckAccess</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="BepInEx.Analyzers" Version="1.*" PrivateAssets="all" />
    <PackageReference Include="BepInEx.Unity.Mono" Version="6.0.0-be.*" IncludeAssets="compile" />
    <PackageReference Include="BepInEx.PluginInfoProps" Version="2.*" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework.TrimEnd(`0123456789`))' == 'net'">
    <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" Version="1.0.2" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <!-- Referencias del juego (desde D:\games\steam\steamapps\common\Core Keeper\CoreKeeper_Data\Managed) -->
    <Reference Include="Pug.Other">
      <HintPath>D:\games\steam\steamapps\common\Core Keeper\CoreKeeper_Data\Managed\Pug.Other.dll</HintPath>
      <Private>false</Private>
      <Aliases>PugOther,Game</Aliases>
    </Reference>

    <Reference Include="UnityEngine">
      <HintPath>D:\games\steam\steamapps\common\Core Keeper\CoreKeeper_Data\Managed\UnityEngine.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="UnityEngine.CoreModule">
      <HintPath>D:\games\steam\steamapps\common\Core Keeper\CoreKeeper_Data\Managed\UnityEngine.CoreModule.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="UnityEngine.CoreModule">
      <HintPath>D:\games\steam\steamapps\common\Core Keeper\CoreKeeper_Data\Managed\UnityEngine.CoreModule.dll</HintPath>
      <Private>false</Private>
      <Aliases>Core</Aliases>
    </Reference>
    <Reference Include="UnityEngine.UI">
      <HintPath>D:\games\steam\steamapps\common\Core Keeper\CoreKeeper_Data\Managed\UnityEngine.UI.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="I2.Loc">
      <HintPath>D:\games\steam\steamapps\common\Core Keeper\CoreKeeper_Data\Managed\I2.dll</HintPath>
      <Private>false</Private>
      <Aliases>I2Loc</Aliases>
    </Reference>
    <Reference Include="Pug.Base">
      <HintPath>D:\games\steam\steamapps\common\Core Keeper\CoreKeeper_Data\Managed\Pug.Base.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="Pug.ECS.Components">
      <HintPath>D:\games\steam\steamapps\common\Core Keeper\CoreKeeper_Data\Managed\Pug.ECS.Components.dll</HintPath>
      <Private>false</Private>
      <Aliases>PugComps</Aliases>
    </Reference>
    <Reference Include="Pug.UnityExtensions">
      <HintPath>D:\games\steam\steamapps\common\Core Keeper\CoreKeeper_Data\Managed\Pug.UnityExtensions.dll</HintPath>
      <Private>false</Private>
      <Aliases>PugUnExt</Aliases>
    </Reference>
    <Reference Include="Unity.Entities">
      <HintPath>D:\games\steam\steamapps\common\Core Keeper\CoreKeeper_Data\Managed\Unity.Entities.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="Unity.Mathematics">
      <HintPath>D:\games\steam\steamapps\common\Core Keeper\CoreKeeper_Data\Managed\Unity.Mathematics.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="Rewired_Core">
      <HintPath>D:\games\steam\steamapps\common\Core Keeper\CoreKeeper_Data\Managed\Rewired_Core.dll</HintPath>
      <Private>false</Private>
    </Reference>

    <!-- Tolk permanece en la carpeta references del proyecto -->
    <Reference Include="TolkDotNet">
      <HintPath>..\references\tolk\TolkDotNet.dll</HintPath>
      <Private>false</Private>
    </Reference>

    <Reference Include="Microsoft.CSharp">
      <Private>false</Private>
    </Reference>
    <Compile Include="..\ck code\RewiredConsts\*.cs" />

  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="copy /Y &quot;$(TargetPath)&quot; &quot;D:\games\steam\steamapps\common\Core Keeper\BepInEx\plugins\ckAccess.dll&quot;" />
    <Exec Command="if not exist &quot;$(TargetDir)Localization\Languages&quot; mkdir &quot;$(TargetDir)Localization\Languages&quot;" />
    <Exec Command="copy /Y &quot;$(ProjectDir)Localization\Languages\*.txt&quot; &quot;$(TargetDir)Localization\Languages\&quot;" />
    <Exec Command="if not exist &quot;D:\games\steam\steamapps\common\Core Keeper\BepInEx\plugins\Localization\Languages&quot; mkdir &quot;D:\games\steam\steamapps\common\Core Keeper\BepInEx\plugins\Localization\Languages&quot;" />
    <Exec Command="copy /Y &quot;$(ProjectDir)Localization\Languages\*.txt&quot; &quot;D:\games\steam\steamapps\common\Core Keeper\BepInEx\plugins\Localization\Languages\&quot;" />
    <Exec Command="if not exist &quot;$(TargetDir)sounds&quot; mkdir &quot;$(TargetDir)sounds&quot;" />
    <Exec Command="copy /Y &quot;$(ProjectDir)sounds\*.wav&quot; &quot;$(TargetDir)sounds\&quot;" />
    <Exec Command="if not exist &quot;D:\games\steam\steamapps\common\Core Keeper\BepInEx\plugins\sounds&quot; mkdir &quot;D:\games\steam\steamapps\common\Core Keeper\BepInEx\plugins\sounds&quot;" />
    <Exec Command="copy /Y &quot;$(ProjectDir)sounds\*.wav&quot; &quot;D:\games\steam\steamapps\common\Core Keeper\BepInEx\plugins\sounds\&quot;" />
  </Target>
